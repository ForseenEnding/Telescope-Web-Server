{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "outDir": "./src/frontend/scripts",
      "rootDir": "./src/frontend/scripts",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "removeComments": false,
      "noEmitOnError": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": [
      "src/frontend/scripts/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "backend",
      "**/*.js"
    ]
  }